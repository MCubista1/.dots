def rnd_min():
	rubiks-scramble -I -O -u -M -n 21 | tr -s ' ' | figlet -t -c -f miniwi 
def rnd_max():
	rubiks-scramble -I -O -u -M -n 21 | tr -s ' ' | figlet -t -c -f maxiwi 
