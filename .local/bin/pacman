#!/bin/bash
#
# ANSI color scheme script featuring PACMAN
# by pfh
#
# Initializing procedure by lolilolicon
#

f=3 b=4
for j in f b; do
  for i in {0..7}; do
    printf -v $j$i %b "\e[${!j}${i}m"
  done
done
bld=$'\e[1m'
rst=$'\e[0m'
inv=$'\e[7m'

cols=$(tput cols)

l1=" $f3  ▄███████▄ "
l2=" $f3▄█████████▀▀"
l3=" $f3███████▀    "
l4=" $f3███████▄    "
l5=" $f3▀█████████▄▄"
l6=" $f3  ▀███████▀ "

if [ "$cols" -ge 96 ]; then
l1+="             "
l2+="             "
l3+="  $f7▄▄  ▄▄  ▄▄ "
l4+="  $f7▀▀  ▀▀  ▀▀ "
l5+="             "
l6+="             "
fi

if [ "$cols" -ge 27 ]; then
l1+="  $f1  ▄██████▄  "
l2+="  $f1▄$f7█▀█$f1██$f7█▀█$f1██▄"
l3+="  $f1█$f7▄▄█$f1██$f7▄▄█$f1███"
l4+="  $f1████████████"
l5+="  $f1██▀██▀▀██▀██"
l6+="  $f1▀   ▀  ▀   ▀"
fi

if [ "$cols" -ge 41 ]; then
l1+="  $f2  ▄██████▄  "
l2+="  $f2▄█$f7███$f2██$f7███$f2█▄"
l3+="  $f2██$f7█ █$f2██$f7█ █$f2██"
l4+="  $f2████████████"
l5+="  $f2██▀██▀▀██▀██"
l6+="  $f2▀   ▀  ▀   ▀"
fi

if [ "$cols" -ge 56 ]; then
l1+="  $f4  ▄██████▄  "
l2+="  $f4▄█$f7███$f4██$f7███$f4█▄"
l3+="  $f4██$f7█ █$f4██$f7█ █$f4██"
l4+="  $f4████████████"
l5+="  $f4██▀██▀▀██▀██"
l6+="  $f4▀   ▀  ▀   ▀"
fi

if [ "$cols" -ge 69 ]; then
l1+="  $f5  ▄██████▄  "
l2+="  $f5▄█$f7███$f5██$f7███$f5█▄"
l3+="  $f5██$f7█ █$f5██$f7█ █$f5██"
l4+="  $f5████████████"
l5+="  $f5██▀██▀▀██▀██"
l6+="  $f5▀   ▀  ▀   ▀"
fi

if [ "$cols" -ge 83 ]; then
l1+="  $f6  ▄██████▄  "
l2+="  $f6▄██$f7█▀█$f6██$f7█▀█$f6▄"
l3+="  $f6███$f7█▄▄$f6██$f7█▄▄$f6█"
l4+="  $f6████████████"
l5+="  $f6██▀██▀▀██▀██"
l6+="  $f6▀   ▀  ▀   ▀"
fi

cat << EOF
$rst
$l1
$l2
$l3
$l4
$l5
$l6

EOF

#cat << EOF
#$rst
# $f3  ▄███████▄                $f1  ▄██████▄    $f2  ▄██████▄    $f4  ▄██████▄    $f5  ▄██████▄    $f6  ▄██████▄
# $f3▄█████████▀▀               $f1▄$f7█▀█$f1██$f7█▀█$f1██▄  $f2▄█$f7███$f2██$f7███$f2█▄  $f4▄█$f7███$f4██$f7███$f4█▄  $f5▄█$f7███$f5██$f7███$f5█▄  $f6▄██$f7█▀█$f6██$f7█▀█$f6▄
# $f3███████▀      $f7▄▄  ▄▄  ▄▄   $f1█$f7▄▄█$f1██$f7▄▄█$f1███  $f2██$f7█ █$f2██$f7█ █$f2██  $f4██$f7█ █$f4██$f7█ █$f4██  $f5██$f7█ █$f5██$f7█ █$f5██  $f6███$f7█▄▄$f6██$f7█▄▄$f6█
# $f3███████▄      $f7▀▀  ▀▀  ▀▀   $f1████████████  $f2████████████  $f4████████████  $f5████████████  $f6████████████
# $f3▀█████████▄▄               $f1██▀██▀▀██▀██  $f2██▀██▀▀██▀██  $f4██▀██▀▀██▀██  $f5██▀██▀▀██▀██  $f6██▀██▀▀██▀██
# $f3  ▀███████▀                $f1▀   ▀  ▀   ▀  $f2▀   ▀  ▀   ▀  $f4▀   ▀  ▀   ▀  $f5▀   ▀  ▀   ▀  $f6▀   ▀  ▀   ▀ 
#
#EOF



#$bld
# $f3  ▄███████▄                $f1  ▄██████▄    $f2  ▄██████▄    $f4  ▄██████▄    $f5  ▄██████▄    $f6  ▄██████▄
# $f3▄█████████▀▀               $f1▄$f7█▀█$f1██$f7█▀█$f1██▄  $f2▄█$f7█ █$f2██$f7█ █$f2█▄  $f4▄█$f7█ █$f4██$f7█ █$f4█▄  $f5▄█$f7█ █$f5██$f7█ █$f5█▄  $f6▄██$f7█▀█$f6██$f7█▀█$f6▄
# $f3███████▀      $f7▄▄  ▄▄  ▄▄   $f1█$f7▄▄█$f1██$f7▄▄█$f1███  $f2██$f7███$f2██$f7███$f2██  $f4██$f7███$f4██$f7███$f4██  $f5██$f7███$f5██$f7███$f5██  $f6███$f7█▄▄$f6██$f7█▄▄$f6█
# $f3███████▄      $f7▀▀  ▀▀  ▀▀   $f1████████████  $f2████████████  $f4████████████  $f5████████████  $f6████████████
# $f3▀█████████▄▄               $f1██▀██▀▀██▀██  $f2██▀██▀▀██▀██  $f4██▀██▀▀██▀██  $f5██▀██▀▀██▀██  $f6██▀██▀▀██▀██
# $f3  ▀███████▀                $f1▀   ▀  ▀   ▀  $f2▀   ▀  ▀   ▀  $f4▀   ▀  ▀   ▀  $f5▀   ▀  ▀   ▀  $f6▀   ▀  ▀   ▀ 
#$rst
