#!/bin/sh

# ANSI Color -- use these variables to easily have different color
#    and format output. Make sure to output the reset sequence after 
#    colors (f = foreground, b = background), and use the 'off'
#    feature for anything you turn on.

initializeANSI()
{
  esc=""

  blackf="${esc}[30m";   redf="${esc}[31m";    greenf="${esc}[32m"
  yellowf="${esc}[33m"   bluef="${esc}[34m";   purplef="${esc}[35m"
  cyanf="${esc}[36m";    whitef="${esc}[37m"
  
  blackb="${esc}[40m";   redb="${esc}[41m";    greenb="${esc}[42m"
  yellowb="${esc}[43m"   blueb="${esc}[44m";   purpleb="${esc}[45m"
  cyanb="${esc}[46m";    whiteb="${esc}[47m"

  boldon="${esc}[1m";    boldoff="${esc}[22m"
  italicson="${esc}[3m"; italicsoff="${esc}[23m"
  ulon="${esc}[4m";      uloff="${esc}[24m"
  invon="${esc}[7m";     invoff="${esc}[27m"

  reset="${esc}[0m"
}

term_cols=$(tput cols)
pnspace=$(echo "($term_cols-11)/2" | bc)
pspace=$(head -c "$pnspace" /dev/zero | tr '\0' ' ' )
if [ "$term_cols" -lt 77 ]; then
	inspace=$(echo "($term_cols-37)/2" | bc)
	ispace=$(head -c "$inspace" /dev/zero | tr '\0' ' ' )
	jspace=$(head -c "$inspace" /dev/zero | tr '\0' ' ' )
else
	inspace=$(echo "($term_cols-77)/2" | bc)
	ispace=$(head -c "$inspace" /dev/zero | tr '\0' ' ' )
	jspace="   "
fi

initializeANSI

r11="${ispace}${redf}  â–€â–„   â–„â–€     ${greenf} â–„â–„â–„â–ˆâ–ˆâ–ˆâ–ˆâ–„â–„â–„    ${yellowf}  â–„â–ˆâ–ˆâ–„  "
r21="${ispace}${redf} â–„â–ˆâ–€â–ˆâ–ˆâ–ˆâ–€â–ˆâ–„    ${greenf}â–ˆâ–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–ˆ   ${yellowf}â–„â–ˆâ–€â–ˆâ–ˆâ–€â–ˆâ–„"
r31="${ispace}${redf}â–ˆâ–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€â–ˆ   ${greenf}â–€â–€â–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–€â–€   ${yellowf}â–€â–€â–ˆâ–€â–€â–ˆâ–€â–€"
r41="${ispace}${redf}â–€ â–€â–„â–„ â–„â–„â–€ â–€   ${greenf}â–„â–„â–€â–€ â–€â–€ â–€â–€â–„â–„   ${yellowf}â–„â–€â–„â–€â–€â–„â–€â–„"

r12="${jspace}${bluef}  â–€â–„   â–„â–€     ${purplef} â–„â–„â–„â–ˆâ–ˆâ–ˆâ–ˆâ–„â–„â–„    ${cyanf}  â–„â–ˆâ–ˆâ–„  "
r22="${jspace}${bluef} â–„â–ˆâ–€â–ˆâ–ˆâ–ˆâ–€â–ˆâ–„    ${purplef}â–ˆâ–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–ˆ   ${cyanf}â–„â–ˆâ–€â–ˆâ–ˆâ–€â–ˆâ–„"
r32="${jspace}${bluef}â–ˆâ–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€â–ˆ   ${purplef}â–€â–€â–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–€â–€   ${cyanf}â–€â–€â–ˆâ–€â–€â–ˆâ–€â–€"
r42="${jspace}${bluef}â–€ â–€â–„â–„ â–„â–„â–€ â–€   ${purplef}â–„â–„â–€â–€ â–€â–€ â–€â–€â–„â–„   ${cyanf}â–„â–€â–„â–€â–€â–„â–€â–„"
	
p1="${pspace}${whitef}       â–Œ"
p2="${pspace}${whitef}     â–Œ"
p3="${pspace}${whitef}    â–„â–ˆâ–„"
p4="${pspace}${whitef}â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„"
p5="${pspace}${whitef}â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€"

if [ "$term_cols" -lt 77 ]; then
inv_str="\
${r11}
${r21}
${r31}
${r41}

${r12}
${r22}
${r32}
${r42}


${p1}

${p2}

${p3}
${p4}
${p5}${reset}"

else
inv_str="\
${r11}${r12}
${r21}${r22}
${r31}${r32}
${r41}${r42}${reset}
${boldon}
${r11}${r12}
${r21}${r22}
${r31}${r32}
${r41}${r42}${reset}


${p1}

${p2}

${p3}
${p4}
${p5}${reset}"

fi

# note in this first use that switching colors doesn't require a reset
# first - the new color overrides the old one.

cat << EOF

${inv_str} 
 
EOF

